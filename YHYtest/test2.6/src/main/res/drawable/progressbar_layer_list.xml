<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@+id/background"
        >
        <clip>
            <shape>
                <corners android:radius="15dp" >
                </corners>
                <gradient android:startColor="#00b7ee"
                    android:endColor="#0075a9"
                    android:angle="278"
                    android:centerY="0.75"></gradient>

            </shape>
        </clip>

    </item>
    <item android:id="@+id/secondProgress">
        <clip>
            <shape>
                <gradient android:startColor="#00b7ee"
                    android:endColor="#0075a9"
                    android:angle="270"
                    android:centerY="0.75"
                    >

                </gradient>
            </shape>
        </clip>
    </item>
    <item android:id="@+id/Progress">
        <clip>
            <shape>
                <gradient android:startColor="#00b7ee"
                    android:endColor="#0075a9"
                    android:angle="270"
                    android:centerY="0.25"
                    >

                </gradient>
            </shape>
        </clip>
    </item>

</layer-list>